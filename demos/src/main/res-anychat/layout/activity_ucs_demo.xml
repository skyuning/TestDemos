<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/ucs_demo_tv_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/ucs_demo_btn_get_client_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="get client id" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/ucs_demo_layout_remote"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#444"
            android:orientation="vertical" />

        <LinearLayout
            android:id="@+id/ucs_demo_layout_local"
            android:layout_width="120dp"
            android:layout_height="180dp"
            android:layout_gravity="right|bottom"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="15dp"
            android:background="#888"
            android:orientation="vertical" />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/ucs_demo_layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/ucs_demo_btn_connect"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/abc_list_selector_holo_dark"
            android:text="connect" />

        <Button
            android:id="@+id/ucs_demo_btn_disconnect"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/abc_list_selector_holo_dark"
            android:text="disconnect" />

    </LinearLayout>

</LinearLayout>