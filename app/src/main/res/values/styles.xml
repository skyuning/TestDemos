<resources>

    <!-- Base application theme. -->
    <style name="DemoAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@color/activity_bg</item>
        <item name="android:actionBarStyle">@style/DemoActionBar</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/action_bar_bg</item>
        <item name="colorPrimaryDark">@color/action_bar_bg</item>
    </style>

    <style name="DemoActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="background">@color/action_bar_bg</item>
        <item name="android:displayOptions">showCustom</item>
        <item name="height">55dp</item>
    </style>
    <!-- Customize your theme here. -->

    <style name="myDialogAnim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>

</resources>
