<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#888888"
    android:orientation="vertical">

    <me.skyun.test.ImageMaskDemo.MaskImageView
        android:id="@+id/image"
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:layout_margin="15dp"
        android:background="@drawable/left_bubble_normal"
        android:scaleType="centerCrop"
        android:src="@drawable/fj" />

    <me.skyun.test.ImageMaskDemo.MaskImageView
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:layout_gravity="right"
        android:layout_margin="15dp"
        android:background="@drawable/right_bubble_normal"
        android:src="@drawable/hy" />

    <LinearLayout
        android:id="@+id/left_bubble_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/left_bubble_normal"
        android:orientation="horizontal"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/right_bubble_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/right_bubble_normal"
        android:orientation="horizontal"
        android:visibility="gone" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/right_bubble_normal"
        android:drawableTop="@drawable/icon"
        android:gravity="center"
        android:padding="10dp"
        android:text="HHHHHHHHHHHHH"
        android:textColor="#00ff00"
        android:textSize="30sp"
        android:textStyle="bold"
        android:visibility="gone" />
</LinearLayout>